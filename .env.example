FLASK_APP=app
FLASK_ENV=production
SECRET_KEY=your_secret_key_here

# PostgreSQLデータベース接続情報（必須）
DATABASE_URL=postgresql://username:password@localhost:5432/trip_db

# アップロードディレクトリ
UPLOAD_FOLDER=app/static/uploads

# Google Maps API設定
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# 楽天API設定
RAKUTEN_API_KEY=your_rakuten_api_key_here

# AWS S3設定
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_S3_REGION=ap-northeast-1
USE_S3=false

# Instagram API設定（オプション）
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret

# Instagram Webhook設定
INSTAGRAM_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
INSTAGRAM_APP_SECRET=your_app_secret_here

# SendGrid メール設定（パスワードリセット機能に必要）
MAIL_SERVER=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=apikey
MAIL_PASSWORD=your_sendgrid_api_key_here
MAIL_DEFAULT_SENDER=your_verified_email@example.com

# HTTPS設定（開発環境用）
USE_HTTPS=false
SSL_CERT_PATH=localhost.crt
SSL_KEY_PATH=localhost.key

# ベースURL設定
BASE_URL=https://your-domain.com 